use Solace::Simple;

# Call main - the start of the script
Main();

##############################################################################
## Main - Starting point for the script
##
##############################################################################
sub Main {

  my $groupInfo = getGroupInfo();

  my $leader = getCurrentLeader($groupInfo);

  if ($leader eq $groupInfo->{current}{ip}) {
    # We are done
    Info("Leader is already $args{vmr_name_or_ip}");
    exit 0;
  }

  moveLeader($groupInfo);
  exit 0;
  
} # Main #


##############################################################################
## moveLeader - Change the leader to the specified VMR 
##
##############################################################################
sub moveLeader {
  my ($groupInfo) = @_;

  my $r2 = $groupInfo->{others}[0]{conn};
  my $r3 = $groupInfo->{others}[1]{conn};
  
  my $targetIp = $groupInfo->{current}{ip};

  my $leader = "";

  my $sanity = 25;
  
  while ($targetIp ne $leader && $sanity--) {
    foreach my $rtr ($r2, $r3) {
      my $pid = getConsulPid($rtr);
      $rtr->linux("kill -STOP $pid");
    }
    sleep(3);
    foreach my $rtr ($r2, $r3) {
      my $pid = getConsulPid($rtr);
      $rtr->linux("kill -CONT $pid");
    }
    
    sleep(3);
    $leader = getCurrentLeader($groupInfo);

    Info("Leader is now $leader");
    
  }

  if ($sanity <= 0) {
    Fatal("Failed to move the leader after 25 attempts");
  }

} # moveLeader #


##############################################################################
## getConsulPid - Get the PID of the consul process 
##
##############################################################################
sub getConsulPid {
  my ($rtr) = @_;

  my $pid = $rtr->linux("pgrep consul");

  Fatal("Failed to PID for consul") if !$pid;

  $pid =~ s/\s*\n(.|\n)*//;

  return $pid;

} # getConsulPid #



##############################################################################
## getCurrentLeader - 
##
## Connect to the router's consul server and get the leader info 
##
##############################################################################
sub getCurrentLeader {
  my ($groupInfo) = @_;

  my $conn = $groupInfo->{current}{conn};
  
  my $leader = $conn->linux("curl --unix-socket /var/run/consul -X GET http://127.0.0.1/v1/status/leader");

  $leader =~ s/["']//;
  $leader =~ s/:.*//;

  return $leader;
  print "Got leader: $leader\n";

} # getCurrentLeader #


##############################################################################
## getGroupInfo - Learn all the group members 
##
##############################################################################
sub getGroupInfo {

  my $rtr = connectToRouter($args{vmr_name_or_ip});
  
  my $groupText = $rtr->cli("show redundancy group");

  my @lines = split(/\n/, $groupText);

  # Throw away the first two lines
  shift(@lines);
  shift(@lines);

  my $groupInfo = {};
  
  foreach my $line (@lines) {
    my ($name, $type, $ip, $status) = ($line =~ /^([^\s]+)\s+(Message-Router|Monitor)\s+([\d\.]+)\s+(\w+)/);
    next if !$name;

    my $current = 0;
    if ($name =~ s/\*$//) {
      $current = 1;
    }
    my $info = {
      name   => $name,
      type   => $type,
      ip     => $ip,
      status => $status
    };

    if ($current) {
      $info->{conn}         = $rtr;
      $groupInfo->{current} = $info;
    }
    else {

      # Connect to the other node
      $info->{conn} = connectToRouter($info->{ip});
      push(@{$groupInfo->{others}}, $info);
      
    }
        
  }

  return $groupInfo;

} # getGroupInfo #



##############################################################################
## connectToRouter - 
##
##############################################################################
sub connectToRouter {
  my ($router) = @_;
  my $attempts = 3;

  my $timeout = $attempts;
  while ($timeout--) {
    waitForPing($router);
    Debug("Trying to connect to router $router");
    my $rtr = Solace::Simple->new(router => $router,
                                  dieOnError => 0,
                                  debug => $args{debug},
                                  verbose => $args{debug} || $args{verbose});
    if ($rtr) {
      if ($rtr->connect("cli")) {
        Debug("Connect to CLI succeeded");
        return $rtr;
      }
    }
    
  }

  Fatal("Failed to connect to router $router after $attempts attempts");

} # connectToRouter #


##############################################################################
## waitForPing - 
##
##############################################################################
sub waitForPing {
  
  my $attempts = 10;
  my $timeout = $attempts;
  while ($timeout--) {
    Debug("Pinging router $_[0]");
    my $out = `ping -c 1 -w 1 $_[0]`;
    if ($out =~ /1 received/) {
      Debug("Ping succeeded");
      return;
    }
  }

  Error("Failed to ping router after $attempts attempts.");

} # waitForPing #

