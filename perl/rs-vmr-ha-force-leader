#!/usr/bin/perl
#
# Script: rs-vmr-ha-force-leader
#
# This script will force the specified VMR to become the leader of an HA
# triplet
# 
#
# The framework of the script was autogenerated by version 7505 of
# /opt/soldev/devtools/bin/super-script.
#
#############################################################################


use strict;
use warnings;
use Data::Dumper;
use Getopt::Long;
use Pod::Usage;

use constant BOLD    => "\e[1m";
use constant NORMAL  => "\e[0m";
my $BOLD   = BOLD;
my $NORMAL = NORMAL;
my $BOLDr  = "\e[31m\e[1m";  # Red
my $BOLDg  = "\e[32m\e[1m";  # Green


# Main hash - all the argument values will be in here after parsing
my %args = (
            vmr_name_or_ip => undef,
            debug => undef,
            gen_completion => undef,
            help => undef,
            interactive => undef,
            quiet => undef,
            short_help => undef,
            tiny_help => undef,
            verbose => undef,
);

